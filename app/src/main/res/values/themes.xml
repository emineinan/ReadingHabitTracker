<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReadingHabitTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color_dark</item>
        <item name="colorSecondaryVariant">@color/primary_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color_dark</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalendarDatePickerDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">@color/primary_color_dark</item>
    </style>

    <style name="CalendarTimePickerDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textColorPrimary">@color/primary_color_dark</item>
        <item name="android:textColorSecondary">@color/primary_color_dark</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>
</resources>